{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",

                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/src/renderer",
                "-I${workspaceFolder}/src/engine",
                "-I${workspaceFolder}/src/util/shaders",
                "-I${workspaceFolder}/src/util",

                "-L${workspaceFolder}/lib",

                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/renderer/*.cpp",
                "${workspaceFolder}/src/engine/*.cpp",
                "${workspaceFolder}/src/util/*.cpp",
                "${workspaceFolder}/src/util/shaders/*.cpp",

                "-lopengl32",
                "-lglew32",
                "-lglfw3dll",
                "-lassimp.dll",
                
                "-o",
                "${workspaceFolder}/Debugx64.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}